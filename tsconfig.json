{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        //"strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es2015",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "lib": [
            "es2016",
            "dom"
        ],
        // "types": [
        //     "node_modules/@types"
        // ],
        "typeRoots": [
            "node_modules/@types",
            "types"
        ],
        "baseUrl": "./",
        "paths": {
            "~/*": [
                "app/*"
            ],
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ],
            "@assets/*": [
                "app/assets/*"
            ],
            "@common/*": [
                "app/common/*"
            ],
            "@components/*": [
                "app/components/*"
            ],
            "@views/*": [
                "app/views/*"
            ]
        }
    },
    "include": [
        "app",
        "types"
    ],
    "exclude": [
        "node_modules",
        "hooks",
        "platforms"
    ]
}