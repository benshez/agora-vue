{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es2015",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "lib": [
            "es2016",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types",
            "types"
        ],
        "baseUrl": "./",
        "paths": {
            "@assets/*": [
                "app/assets/*"
            ],
            "@common/*": [
                "app/common/*"
            ],
            "@components/*": [
                "app/components/*"
            ]
        }
    },
    // "include": [
    //     "app",
    //     "types"
    // ],
    // "exclude": [
    //     "node_modules",
    //     "hooks",
    //     "platforms"
    // ]
}